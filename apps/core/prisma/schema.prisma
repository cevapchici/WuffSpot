datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  comments  Comment[]
  createdAt DateTime  @default(now())
  email     String    @unique
  id        Int       @id @default(autoincrement())
  name      String
  reviews   Review[]
  updatedAt DateTime  @updatedAt
}

model DogPark {
  comments    Comment[]
  createdAt   DateTime  @default(now())
  description String
  id          Int       @id @default(autoincrement())
  lat         Float
  lng         Float
  name        String
  reviews     Review[]
  size        String
  updatedAt   DateTime  @updatedAt
}

model Review {
  createdAt   DateTime @default(now())
  description String
  dogPark     DogPark  @relation(fields: [dogParkId], references: [id])
  dogParkId   Int
  id          Int      @id @default(autoincrement())
  rating      Float
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model Comment {
  createdAt DateTime @default(now())
  dogPark   DogPark  @relation(fields: [dogParkId], references: [id])
  dogParkId Int
  id        Int      @id @default(autoincrement())
  text      String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}
